<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextFont.Regular" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jannat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TextFont.Bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jannat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="EditText.Normal" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/jannat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Bold" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/jannat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PromoteProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/bg_progress</item>
    <item name="android:minWidth">200dp</item>
    <item name="android:minHeight">6dp</item>
    </style>

    <style name="SettingsDialogChildLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsDialogText" parent="TextFont.Bold">
        <item name="android:textColor">@color/color_grey_100</item>
    </style>

    <style name="DateTimePickerDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorPrimary">@color/purple_700</item>
        <item name="android:colorAccent">@color/teal_200</item>
    </style>

</resources>